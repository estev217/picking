{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block title %}Picking{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="edit d-flex flex-column">
        <div class="d-flex align-items-center justify-content-around">
            <p class="editTitle text-center border-bottom">Picking - sélection de la commande</p>
        </div>
        {{ form_start(form) }}
        <div class="d-flex container justify-content-center mt-4 mb-5">
            <div class="mr-3">{{ form_widget(form.commande) }}</div>
            <div><button class="search btn">Chercher</button></div>
        </div>
        {{ form_end(form) }}

        <table class="table">
            <thead>
                <tr>
                    <th>Num commande</th>
                    <th>Gencod</th>
                    <th>Quantité</th>
                </tr>
            </thead>
            <tbody>
            {% for commande_ligne in commande_lignes %}

            <tr>
                <td>{{ commande_ligne.commande.numCommande }}</td>
                <td>{{ commande_ligne.gencod }}</td>
                <td>{{ commande_ligne.qte }}</td>
                <td>
                    <a href="{{ path('commande_ligne_show', {'id': commande_ligne.id}) }}">show</a>
                    <a href="{{ path('commande_ligne_edit', {'id': commande_ligne.id}) }}">edit</a>
                </td>
            </tr>

            {% else %}
                <tr>
                    <td colspan="7">Aucune commande à traiter</td>
                </tr>

            {% endfor %}
            </tbody>
        </table>

        <div class="pagination d-flex justify-content-center">
            {{ knp_pagination_render(commande_lignes) }}
        </div>
        <div class="d-flex align-items-center justify-content-center mt-4">
            <a href="{{ path('app_logout') }}" class="navigationButton" title="Déconnexion">
                <i class="fas fa-power-off fa-2x"></i>
            </a>
        </div>
    </div>
</div>


{% endblock %}