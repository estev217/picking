{% extends 'base.html.twig' %}

{% block title %}Commande List{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="home d-flex flex-column">
        <div class="d-flex align-items-center justify-content-around">
            <p class="editTitle text-center border-bottom">Choisir une commande à traiter</p>
        </div>
        <div class="dropdown dropright show my-5">
            <a class="btn btn-lg btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Liste des commandes
            </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                {%  for commande in commandes %}

                    <a class="dropdown-item text-center" href="{{ path('commande_edit', {'id': commande.id}) }}">{{ commande.numCommande }}</a>
                    {% else %}
                        <p>Aucune commande à traiter</p>
                {% endfor %}
            </div>
        </div>
        <div class="d-flex align-items-center my-3">
            <a href="{{ path('home') }}" class="navigationButton mr-2" title="Menu principal">
                <i class="fas fa-arrow-circle-left fa-3x"></i>
            </a>
            <a href="{{ path('app_logout') }}" class="navigationButton mx-2" title="Déconnexion">
                <i class="fas fa-power-off fa-3x"></i>
            </a>
        </div>
    </div>
{% endblock %}