{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
                <th>Demandeur</th>
                <td>{{ commande.demandeur }}</td>
                <th>Magasin cédant</th>
                <td>{{ commande.magasinCedant }}</td>
                <th>Destination</th>
                <td>{{ commande.destination }}</td>
                <th>Date</th>
                <td>{{ commande.date|date("d/m/Y H:i:s") }}</td>
                <th>Solde</th>
                <td>{{ commande.solde ? "soldé" : "non soldé" }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commande_index') }}">back to list</a>

    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
