{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="user d-flex flex-column">
            <div class="d-flex align-items-center justify-content-around">
                <p class="indexTitle text-center border-bottom">Modification du mot de passe de {{ operateur.username }}</p>
            </div>
            <form method="post" class="mt-2 d-flex flex-column justify-content-center">

                <div class="text-dark d-flex flex-column">
                    {{ form_start(form) }}
                    <div class="col-5 align-self-center d-flex flex-column justify-content-center mt-3 ml-4">
                        {{ form_row(form.password) }}
                        </div>
                </div>
                <div class="col-6 align-self-center d-flex justify-content-center mt-4">
                    <button class="register mt-3 mb-4 btn btn-lg">Enregistrer le nouveau mot de passe</button>
                </div>
                {{ form_end(form) }}
            </form>
            <div class="d-flex align-items-center justify-content-center mt-4">
                <a href="{{ path('operateur_edit', {'id': operateur.id}) }}" class="navigationButton mr-2" title="Retour">
                    <i class="fas fa-arrow-circle-left fa-2x"></i>
                </a>
                <a href="{{ path('app_logout') }}" class="navigationButton ml-2" title="DÃ©connexion">
                    <i class="fas fa-power-off fa-2x"></i>
                </a>
            </div>
        </div>
    </div>

{% endblock %}
