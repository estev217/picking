{% extends 'base.html.twig' %}

{% block main %}
    <div class="container-fluid">
        <div class="login d-flex flex-column justify-content-around">
            <div class="text-center d-flex flex-column justify-content-center align-items-center">
                <p class="loginTitle border-bottom">Picking SAV Retour</p>
                <img src="https://www.n9ws.com/images/upload/bouygues-040118110201.png" class="logo" alt="">
            </div>
            <form method="post" class="mt-3">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="text-center">
                    <label for="inputOperator" class="loginLabel"><i class="fas fa-user mr-1"></i>Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputOperator" class="form-control"
                           required autofocus>
                </div>
                <div class="text-center">
                    <label for="inputPassword" class="loginLabel mt-3"><i class="fas fa-key mr-1"></i>Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                </div>
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="text-center">
                    <button class="access btn btn-primary my-4" type="submit">
                        Me connecter
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
